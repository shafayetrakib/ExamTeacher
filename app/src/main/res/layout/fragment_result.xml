<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_sc"
    android:orientation="vertical"
    tools:context=".Fragments.ResultFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/blue_pr_bottom_radius_bg"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/barlow_semibold"
            android:gravity="center"
            android:text="Students Result"
            android:textColor="@color/white"
            android:textSize="38sp" />

        <TextView
            android:id="@+id/txt_select_course_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/white_btn_bg"
            android:gravity="center"
            android:padding="10dp"
            android:text="Select Course Name"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txt_select_exam_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/white_btn_bg"
            android:gravity="center"
            android:padding="10dp"
            android:text="Select Exam"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/list_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:orientation="horizontal"
        android:padding="10dp"
        android:visibility="gone"
        android:weightSum="12">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="6"
            android:fontFamily="@font/barlow_regular"
            android:gravity="center_vertical"
            android:text="Student Name"
            android:textColor="@color/black_pr"
            android:textSize="14sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:fontFamily="@font/barlow_regular"
            android:gravity="center_vertical"
            android:text="Total Marks"
            android:textColor="@color/black_pr"
            android:textSize="14sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:fontFamily="@font/barlow_regular"
            android:gravity="center_vertical"
            android:text="Obtain Marks"
            android:textColor="@color/black_pr"
            android:textSize="14sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:fontFamily="@font/barlow_regular"
            android:gravity="center_vertical"
            android:text="Result"
            android:textColor="@color/black"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/txt_course_exam_ins"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Please Select Course and Exam"
        android:textColor="@color/black_sc"
        android:textSize="18sp"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/progress_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="50dp"
            android:layout_height="50dp" />
    </LinearLayout>

    <ListView
        android:id="@+id/lst_result_show"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:divider="@color/transparent"
        android:dividerHeight="5dp"
        android:paddingHorizontal="15dp"
        android:paddingTop="5dp"
        android:paddingBottom="15dp"
        android:scrollbars="none"
        android:visibility="gone" />
</LinearLayout>