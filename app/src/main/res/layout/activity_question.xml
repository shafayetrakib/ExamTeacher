<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".QuestionSetActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_shape"
        android:padding="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_question_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/barlow_semibold"
            android:text="Question No : 01"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="36sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/dialog_bg_white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="8">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6.5"
                    android:fontFamily="@font/barlow_regular"
                    android:text="Exam Total Marks"
                    android:textColor="@color/black_pr"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:fontFamily="@font/barlow_regular"
                    android:text=":"
                    android:textAlignment="center"
                    android:textColor="@color/black_pr"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/txt_exam_total_marks"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/barlow_regular"
                    android:text="50"
                    android:textAlignment="textEnd"
                    android:textColor="@color/black_pr"
                    android:textSize="18sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/black_sc"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="7dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="8">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6.5"
                    android:fontFamily="@font/barlow_regular"
                    android:text="Question Total Marks"
                    android:textColor="@color/black_pr"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:fontFamily="@font/barlow_regular"
                    android:text=":"
                    android:textAlignment="center"
                    android:textColor="@color/black_pr"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/txt_question_total_marks"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/barlow_regular"
                    android:text="0"
                    android:textAlignment="textEnd"
                    android:textColor="@color/black_pr"
                    android:textSize="18sp" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>






    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <EditText
                android:id="@+id/edt_question"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/edt_bg_sc"
                android:fontFamily="@font/barlow_regular"
                android:hint="Question"
                android:inputType="text"
                android:paddingHorizontal="20dp"
                android:textColorHint="@color/black_sc"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <EditText
                    android:id="@+id/edt_option_one"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edt_bg_sc"
                    android:fontFamily="@font/barlow_regular"
                    android:hint="Option One"
                    android:inputType="text"
                    android:paddingHorizontal="20dp"
                    android:textColorHint="@color/black_sc"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/edt_option_two"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edt_bg_sc"
                    android:fontFamily="@font/barlow_regular"
                    android:hint="Option Two"
                    android:inputType="text"
                    android:paddingHorizontal="20dp"
                    android:textColorHint="@color/black_sc"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/edt_option_three"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edt_bg_sc"
                    android:fontFamily="@font/barlow_regular"
                    android:hint="Option Three"
                    android:inputType="text"
                    android:paddingHorizontal="20dp"
                    android:textColorHint="@color/black_sc"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/edt_option_four"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/edt_bg_sc"
                    android:fontFamily="@font/barlow_regular"
                    android:hint="Option Four"
                    android:inputType="text"
                    android:paddingHorizontal="20dp"
                    android:textColorHint="@color/black_sc"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_correct_ans"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/barlow_regular"
                    android:gravity="center_horizontal"
                    android:text="Correct Answer : "
                    android:textColor="@color/black_pr"
                    android:textSize="20sp" />

                <RadioGroup
                    android:id="@+id/radio_ans_grp"
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/checkbox_one"
                        android:layout_width="25dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/checkbox"
                        android:backgroundTint="@color/blue_pr"
                        android:button="@null" />

                    <RadioButton
                        android:id="@+id/checkbox_two"
                        android:layout_width="25dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/checkbox"
                        android:backgroundTint="@color/blue_pr"
                        android:button="@null" />

                    <RadioButton
                        android:id="@+id/checkbox_three"
                        android:layout_width="25dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/checkbox"
                        android:backgroundTint="@color/blue_pr"
                        android:button="@null" />

                    <RadioButton
                        android:id="@+id/checkbox_four"
                        android:layout_width="25dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/checkbox"
                        android:backgroundTint="@color/blue_pr"
                        android:button="@null" />
                </RadioGroup>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/barlow_regular"
                android:text="Select Question Mark"
                android:textColor="@color/black_pr"
                android:textSize="18sp" />

            <RadioGroup
                android:id="@+id/radio_mark_grp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/q_mark_one"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/question_option_selector_bg"
                    android:button="@null"
                    android:checked="true"
                    android:fontFamily="@font/barlow_semibold"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="1"
                    android:textColor="@drawable/question_option_selector_text" />

                <RadioButton
                    android:id="@+id/q_mark_two"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/question_option_selector_bg"
                    android:button="@null"
                    android:fontFamily="@font/barlow_semibold"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="2"
                    android:textColor="@drawable/question_option_selector_text" />

                <RadioButton
                    android:id="@+id/q_mark_three"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/question_option_selector_bg"
                    android:button="@null"
                    android:fontFamily="@font/barlow_semibold"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="3"
                    android:textColor="@drawable/question_option_selector_text" />

            </RadioGroup>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_save_question"
                    style="@android:style/Widget.Material.Button.Borderless"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:background="@drawable/blue_btn_bg"
                    android:fontFamily="@font/barlow_regular"
                    android:text="Save"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <View
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:background="@color/transparent" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_add_question"
                    style="@android:style/Widget.Material.Button.Borderless"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:background="@drawable/blue_btn_bg"
                    android:backgroundTint="@color/blue_sc"
                    android:fontFamily="@font/barlow_regular"
                    android:text="Add"
                    android:textAllCaps="false"
                    android:textColor="@color/black_pr"
                    android:textSize="18sp" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>