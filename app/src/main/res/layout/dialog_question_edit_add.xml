<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:scrollbars="none"
    android:background="@drawable/dialog_bg_white"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_question_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/barlow_semibold"
            android:text="Edit Question No. "
            android:textColor="@color/blue_pr"
            android:textSize="32sp" />

        <EditText
            android:id="@+id/edt_dialog_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/edt_bg_sc"
            android:fontFamily="@font/barlow_regular"
            android:hint="Question"
            android:inputType="textMultiLine"
            android:paddingHorizontal="20dp"
            android:paddingVertical="15dp"
            android:textColorHint="@color/black_sc"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <EditText
                android:id="@+id/edt_dialog_option_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/edt_bg_sc"
                android:fontFamily="@font/barlow_regular"
                android:hint="Option One"
                android:inputType="textMultiLine"
                android:paddingHorizontal="20dp"
                android:paddingVertical="15dp"
                android:textColorHint="@color/black_sc"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/edt_dialog_option_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/edt_bg_sc"
                android:fontFamily="@font/barlow_regular"
                android:hint="Option Two"
                android:inputType="textMultiLine"
                android:paddingHorizontal="20dp"
                android:paddingVertical="15dp"
                android:textColorHint="@color/black_sc"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/edt_dialog_option_three"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/edt_bg_sc"
                android:fontFamily="@font/barlow_regular"
                android:hint="Option Three"
                android:inputType="textMultiLine"
                android:paddingHorizontal="20dp"
                android:paddingVertical="15dp"
                android:textColorHint="@color/black_sc"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/edt_dialog_option_four"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/edt_bg_sc"
                android:fontFamily="@font/barlow_regular"
                android:hint="Option Four"
                android:inputType="textMultiLine"
                android:paddingHorizontal="20dp"
                android:paddingVertical="15dp"
                android:textColorHint="@color/black_sc"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_correct_ans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/barlow_regular"
                android:gravity="center_horizontal"
                android:text="Correct Answer : "
                android:textColor="@color/black_pr"
                android:textSize="20sp" />

            <RadioGroup
                android:id="@+id/radio_dialog_ans_grp"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/dialog_checkbox_one"
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/checkbox"
                    android:backgroundTint="@color/blue_pr"
                    android:button="@null" />

                <RadioButton
                    android:id="@+id/dialog_checkbox_two"
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/checkbox"
                    android:backgroundTint="@color/blue_pr"
                    android:button="@null" />

                <RadioButton
                    android:id="@+id/dialog_checkbox_three"
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/checkbox"
                    android:backgroundTint="@color/blue_pr"
                    android:button="@null" />

                <RadioButton
                    android:id="@+id/dialog_checkbox_four"
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/checkbox"
                    android:backgroundTint="@color/blue_pr"
                    android:button="@null" />
            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_mark_setter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/barlow_regular"
                android:text="Select Question Mark"
                android:textColor="@color/black_pr"
                android:textSize="18sp" />

            <RadioGroup
                android:id="@+id/radio_dialog_mark_grp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/q_dialog_mark_one"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/question_option_selector_bg"
                    android:button="@null"
                    android:checked="true"
                    android:fontFamily="@font/barlow_semibold"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="1"
                    android:textColor="@drawable/question_option_selector_text" />

                <RadioButton
                    android:id="@+id/q_dialog_mark_two"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/question_option_selector_bg"
                    android:button="@null"
                    android:fontFamily="@font/barlow_semibold"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="2"
                    android:textColor="@drawable/question_option_selector_text" />

                <RadioButton
                    android:id="@+id/q_dialog_mark_three"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/question_option_selector_bg"
                    android:button="@null"
                    android:fontFamily="@font/barlow_semibold"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="3"
                    android:textColor="@drawable/question_option_selector_text" />

            </RadioGroup>
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_dialog_save_question"
            style="@android:style/Widget.Material.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/blue_btn_bg"
            android:fontFamily="@font/barlow_regular"
            android:text="Save"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>
</ScrollView>