<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ExamSetActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/blue_pr_bottom_radius_bg"
        android:padding="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/barlow_semibold"
            android:gravity="center"
            android:text="Exam Setup"
            android:textColor="@color/white"
            android:textSize="38sp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/edt_exam_name"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/edt_bg_sc"
                    android:fontFamily="@font/barlow_regular"
                    android:hint="Title"
                    android:inputType="text"
                    android:paddingHorizontal="20dp"
                    android:textColor="@color/black_pr"
                    android:textColorHint="@color/black_sc"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/edt_exam_syllabus"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/edt_bg_sc"
                    android:fontFamily="@font/barlow_regular"
                    android:hint="Syllabus"
                    android:inputType="text"
                    android:paddingHorizontal="20dp"
                    android:textColor="@color/black_pr"
                    android:textColorHint="@color/black_sc"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/edt_exam_date"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/edt_bg_sc"
                    android:fontFamily="@font/barlow_regular"
                    android:gravity="center_vertical"
                    android:hint="Date"
                    android:paddingHorizontal="20dp"
                    android:textColor="@color/black_pr"
                    android:textColorHint="@color/black_sc"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/edt_exam_time"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/edt_bg_sc"
                    android:fontFamily="@font/barlow_regular"
                    android:gravity="center_vertical"
                    android:hint="Time"
                    android:paddingHorizontal="20dp"
                    android:textColor="@color/black_pr"
                    android:textColorHint="@color/black_sc"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/edt_exam_mark"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/edt_bg_sc"
                    android:fontFamily="@font/barlow_regular"
                    android:hint="Marks"
                    android:inputType="number"
                    android:paddingHorizontal="20dp"
                    android:textColor="@color/black_pr"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/edt_exam_duration"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/edt_bg_sc"
                    android:fontFamily="@font/barlow_regular"
                    android:hint="Duration"
                    android:inputType="number"
                    android:paddingHorizontal="20dp"
                    android:textColor="@color/black_pr"
                    android:textSize="20sp" />

            </LinearLayout>

            <Button
                android:id="@+id/btn_addquestion"
                style="@android:style/Widget.Material.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/blue_btn_bg"
                android:backgroundTint="@color/blue_sc"
                android:fontFamily="@font/barlow_regular"
                android:gravity="center"
                android:text="Add Question"
                android:textAllCaps="false"
                android:textColor="@color/black_pr"
                android:textSize="18sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_save_exam"
                style="@android:style/Widget.Material.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/blue_btn_bg"
                android:fontFamily="@font/barlow_regular"
                android:text="Save"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </LinearLayout>

    </ScrollView>

</LinearLayout>