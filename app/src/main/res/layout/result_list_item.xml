<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:weightSum="12"
    android:background="@drawable/result_item_bg">
    
    <TextView
        android:id="@+id/txt_result_st_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="6"
        android:textSize="18sp"
        android:textColor="@color/black_pr"
        android:fontFamily="@font/barlow_regular"
        android:gravity="center_vertical"/>
    <TextView
        android:id="@+id/txt_result_total_marks"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:textSize="18sp"
        android:textColor="@color/black_pr"
        android:fontFamily="@font/barlow_regular"
        android:gravity="center_vertical"/>
    <TextView
        android:id="@+id/txt_result_obtain_marks"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:textSize="18sp"
        android:textColor="@color/black_pr"
        android:fontFamily="@font/barlow_regular"
        android:gravity="center_vertical"/>
    <TextView
        android:id="@+id/txt_result_pass_fail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:textSize="18sp"
        android:textColor="@color/blue_pr"
        android:fontFamily="@font/barlow_semibold"
        android:gravity="center_vertical"/>
</LinearLayout>